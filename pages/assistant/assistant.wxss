.container-my {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user-info-my {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #8cc24b;
}

.userinfo-avatar-my {
  align-self: center;
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 18rpx;
  margin-top: 34rpx;
  border-radius: 50%;
}

.userinfo-nickname-my {
  align-self: center;
  color: #353535;
  margin-bottom: 36rpx;
  font-size: 30rpx;
}

.view-column {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.view-row {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.text-left {
  width: 50%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #353535;
  margin-left: 30rpx;
}

.text-right {
  width: 50%;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 30rpx;
}

.nouse-line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
}
