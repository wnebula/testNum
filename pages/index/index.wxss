/**index.wxss**/

.field-image {
  width: 95%;
  margin-top: 20rpx;
}

.create-game {
  margin-top: 9rpx;
  font-size: 24rpx;
  color: #b2b2b2;
  margin-bottom: 20rpx;
}

.empty-image {
  height: 345rpx;
  width: 211rpx;
  margin-top: 90rpx;
}

.empty-text {
  margin-top: 45rpx;
  font-size: 28rpx;
  color: #b2b2b2;
}

.item-all {
  width: 95%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 19rpx;
  display: flex;
  flex-direction: column;
}

.item-time {
  padding-top: 20rpx;
  padding-bottom: 15rpx;
  margin-top: 20rpx;
  background-color: #fff;
  height: 37rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.text-time {
  /* justify-content: center; *//* align-self: center; */
  color: #7f8389;
  font-size: 26rpx;
}

.text-left {
  margin-left: 20rpx;
  height: 36rpx;
  width: 92rpx;
}

.text-enter-end {
  justify-content: center;
  display: flex;
  font-weitextght: 600;
  height: 36rpx;
  width: 88rpx;
  border: 1rpx #979797 solid;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #888;
  text-align: center;
  align-items: center;
  margin-right: 20rpx;
}

.text-enter {
  justify-content: center;
  display: flex;
  font-weight: 600;
  height: 36rpx;
  width: 88rpx;
  border: 1rpx #20a64c solid;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #2fac58;
  text-align: center;
  align-items: center;
  margin-right: 20rpx;
}

.item-else {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item-field {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.field-pic {
  width: 16rpx;
  height: 26rpx;
}

.field-text {
  font-size: 24rpx;
  color: #353535;
  margin-left: 10rpx;
}

.item-team {
  padding-top: 15rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  padding-bottom: 30rpx;
}

.team-left {
  width: 43%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.team-center {
  width: 14%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.team-left-text {
  font-size: 32rpx;
  color: #555;
}

.team-left-pic {
  width: 48rpx;
  height: 48rpx;
}

.team-center-top-text {
  font-size: 28rpx;
  color: #868686;
}

.team-center-bottom-text {
  margin-top: 13rpx;
  font-size: 22rpx;
  color: #7f8389;
}

.team-center-bottom-view {
  font-size: 22rpx;
  color: #7f8389;
  height: 45rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.team-center-top-view {
  font-size: 28rpx;
  color: #868686;
  height: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.item-people-count {
  height: 50rpx;
  background-color: #1aad19;
  font-size: 26rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.view-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}
