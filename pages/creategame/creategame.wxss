.scrollview-all {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.item-view {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fff;
  flex-direction: row;
  display: flex;
  /* width: 100%; */
  height: 100rpx;
  justify-content: flex-start;
  padding-left: 30rpx;
  align-items: center;
}

.text-left {
  width: 48%;
  font-size: 32rpx;
  color: #353535;
}

.input-right {
  /* height: 85rpx; */
  padding-right: 35rpx;
  width: 52%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.date-left {
  /* align-self: center; *//* height: 42rpx; */
  width: 57%;
  margin-top: 5rpx;
  font-size: 30rpx;
  color: #353535;
  font-family: Helvetica;
}

.line_center {
  width: 27%;
  color: #888;
  align-self: center;
}

.time-right {
  /* align-self: left;
   */
  margin-top: 5rpx;
  width: 43%;
  font-size: 30rpx;
  color: #353535;
  font-family: Helvetica;
  margin-left: 30rpx;
}

.input-text {
  font-size: 30rpx;
  color: #353535;
}

.inputholder-text {
  font-size: 30rpx;
  color: #ccc;
}

.field-position {
  width: 18rpx;
  height: 30rpx;
  margin-left: 15rpx;
}

.field-position-text {
  font-size: 32rpx;
  color: #353535;
}

.inter-right {
  width: 40%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}

.inter-image {
  width: 16rpx;
  height: 26rpx;
}

.position-left {
  width: 48%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.kind-list-item-hd {
  display: flex;
  align-items: center;
  transition: opacity 0.3;
}

.kind-list-item-hd-show {
  opacity: 0.2;
}

.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list-item-bd-show {
  height: auto;
}

.kind-list-text {
  flex: 1;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-text {
  font-size: 30rpx;
  color: #353535;
  margin-left: 50rpx;
}

.navigator-box {
  margin-right: 20rpx;
  margin-left: 20rpx;
  opacity: 0;
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 34rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}

.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}

.jersey-pic {
  width: 45rpx;
  height: 39rpx;
}

.confirm-button {
  margin-top: 60rpx;
  margin-left: 38rpx;
  margin-right: 38rpx;
  height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 60rpx;
}
